extends ./index.jade

block head
    link(rel='stylesheet', type='text/css', href='/vendor/foundation/css/normalize.css')
    link(rel='stylesheet', type='text/css', href='/vendor/foundation/css/foundation.css')

block content
    #stage
        .row
            .small-12.columns
                h1= currentImageName
        .row
            .small-12.columns
                input#gestures(type='checkbox') 
                | Gestures
                input#alerts(type='checkbox')
                | Alerts
        .row        
            .small-12.columns
                button#Start Start
                button#Stop(disabled='disabled') Stop
        //- .row
        //-     .small-6.columns
        //-         canvas#myCanvas(style='border:1px solid #000000;')
        .row
            .small-6.columns
                img(src=currentImageHref)
        .row        
            .small-12.columns
                span The Current Gesture is:
                span#currentGesture
        .row
            .small-12.columns
                div Status:
                    #status
        .row
            .small-12.columns
                a(href=nextStep) Next Step
    
block script
    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src='/vendor/underscore/underscore-min.js')
    script(src='/staticPages/promise.js')
    script(src='/staticPages/realsense-3.0.js')
    script(src='/staticPages/realsenseinfo-3.0.js')
    script(src='/staticPages/start.js')
